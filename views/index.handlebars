{{js "/js/index.js"}}
{{css "/css/index.css"}}

<div class="container mt-4">

  <div class="row justify-content-center">
    <div class="col-2"></div>
    <div class="col-8">
      <form action="/" class="row">
        <select name="category" id="category" class="form-control col-6" onchange="this.form.submit()">
          <option value="">請選擇類別</option>
          {{#each categories}}
          <option value="{{this.name}}" {{#if (eq this.name ../category )}} selected {{/if}}>
            {{this.name}}
          </option>
          {{/each}}
        </select>
        <select name="month" id="month" class="form-control col-6" onchange="this.form.submit()">
          <option value="">請選擇月份</option>
          {{#each months}}
          <option value="{{this}}" {{#if (eq this ../month )}} selected {{/if}}>
            {{this}}
          </option>
          {{/each}}
        </select>
      </form>
    </div>
    <div class="col-2"></div>

    <div class="col-3"></div>
    <div class="col-5 ">
      <div class="row mt-3 justify-content-center">
        <div class="col-4 text-left">
          <h3 for="">總金額：</h5>
        </div>
        <div class="col-8 text-right align-text-bottom">
          <h1 class="font-weight-bold total-price">0</h1>
        </div>
      </div>
    </div>
    <div class="col-4"></div>
  </div>




  <div class="row mt-2">
    <div class="col-2"></div>
    <table class="table table-striped table-hover col-8">

      <tbody class="text-break">
        {{#each lists}}
        <tr class="row align-items-center justify-content-between px-2">
          <td class="col-1 border-0 text-center"><i class="{{this.category.font}} fa-2x"></i></th>
          <td class="col-3 text-center border-0">
            <h4 class="mb-1">{{this.name}}</h4>
            <small>{{this.date}}</small>
          </td>
          <td class="col-3 border-0">
            <h4 class="text-break">{{this.merchant}}</h4>
          </td>
          <td class="col-2 border-0"><span class="amount">{{this.amount}}</span>元</td>
          <td class="col-3 border-0">
            <form class="" action="/record/{{this._id}}?_method=DELETE" method="POST">
              <a class="btn btn-outline-info col-auto" href="/record/{{this._id}}/edit">修改</a>
              <button class="btn btn-outline-danger col-auto" type="submit">刪除</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <div class="col-2"></div>
  </div>
</div>